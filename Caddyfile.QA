(common_settings) {
    tls /etc/caddy/certs/mycert.crt /etc/caddy/certs/mykey.key

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Content-Security-Policy: "script-src 'self' 'unsafe-inline' 'unsafe-eval' maps.googleapis.com challenges.cloudflare.com analytics.picklebook.org code.jquery.com cdn.jsdelivr.net cdnjs.cloudflare.com cdn.datatables.net; style-src 'self' 'unsafe-inline' fonts.googleapis.com maps.googleapis.com cdnjs.cloudflare.com cdn.datatables.net cdn.jsdelivr.net; manifest-src 'self'"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        Cross-Origin-Opener-Policy "same-origin"
        Cache-Control "public, max-age=3600"
    }

    header -Via
    header -Via
    header -X-Powered-By
    header -Server

    encode zstd gzip
}


qaemail.picklebook.org:443 {
    import common_settings

    reverse_proxy http://mailpit:8025 {
        transport http {
            keepalive 32s
            keepalive_idle_conns 64
        }
    }
}

