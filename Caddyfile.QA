:443 {
    import common_settings

    reverse_proxy {
        to http://picklebook-nginx1:80
        to http://picklebook-nginx2:80
        
		lb_policy least_conn

        health_uri /health
        health_interval 5s
        health_timeout 2s
		health_status 200

		# Connection settings
        transport http {
            keepalive 32s
            keepalive_idle_conns 64
        }
    }
}