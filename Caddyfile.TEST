:443 {
    import common_settings

    @assets {
        path /assets/*
    }
    header @assets {
        # Long-lived cache for static versioned assets
        Cache-Control "public, max-age=31536000, immutable"
    }

    handle {
        reverse_proxy {
            to http://picklebook-nginx1:80
            to http://picklebook-nginx2:80

            header_down -Cache-Control
            
            lb_policy least_conn

            health_uri /health
            health_interval 5s
            health_timeout 2s
            health_status 200

            # Connection settings
            transport http {
                keepalive 32s
                keepalive_idle_conns 64
            }
        }
    }
}