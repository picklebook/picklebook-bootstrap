(common_settings) {
    tls /etc/caddy/certs/mycert.crt /etc/caddy/certs/mykey.key

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Content-Security-Policy: "script-src 'self' 'unsafe-inline' 'unsafe-eval' maps.googleapis.com challenges.cloudflare.com www.picklebook.org; style-src 'self' 'unsafe-inline' maps.googleapis.com fonts.googleapis.com; manifest-src 'self'"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        Cross-Origin-Opener-Policy "same-origin"
        Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
    }

    header -Via
    header -Via
    header -X-Powered-By
    header -Server

    encode zstd gzip
}


