(common_settings) {
    tls /etc/caddy/certs/mycert.crt /etc/caddy/certs/mykey.key

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Content-Security-Policy: script-src 'self' 'unsafe-inline' analytics.picklebook.org code.jquery.com cdn.jsdelivr.net cdnjs.cloudflare.com cdn.datatables.net; style-src 'self' cdnjs.cloudflare.com cdn.datatables.net cdn.jsdelivr.net; img-src 'self' data:; manifest-src 'self'
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        Cross-Origin-Opener-Policy "same-origin"
        Cross-Origin-Resource-Policy "same-origin"
        Cross-Origin-Embedder-Policy "require-corp"
        Cache-Control "public, max-age=3600"
    }

    # Optional: remove the Via header
    header -delete Via

    encode zstd gzip
}

devemail.picklebook.org:443 {
    import common_settings

    reverse_proxy http://mailpit:8025 {
        transport http {
            keepalive 32s
            keepalive_idle_conns 64
        }
    }
}

